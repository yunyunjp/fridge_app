<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="heading">ログイン</h2>
        
        <%= form_with model: @user, url:user_session_path , local: true do |f| %>

        <div class='login-flash-message'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード(6文字以上)" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: :form__btn %>
        </div>
      <% end %>
        <div class="login-button">
          <%= link_to image_tag("btn_google_signin_light_focus_web.png"), user_google_oauth2_omniauth_authorize_path, alt: 'Googleでログイン', method: :post%>
        </div>
    </div>
  </div>
</div>