<main class="main">
  <div class="inner">
  <div class="search-right">
  <%= form_with(url: search_items_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, class: "search-input" %><i class="fas fa-search fa-1x fa-fw" style="color: #808080;"></i>
  <%= form.submit "検索", class: "search-btn" %>
  <% end %>
  </div>
  <div class="card-wrapper">
    <%= render partial: "item" %>
  </div>
  </div>
</main>